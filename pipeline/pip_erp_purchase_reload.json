{
	"name": "pip_erp_purchase_reload",
	"properties": {
		"description": "ERP 採購單",
		"activities": [
			{
				"name": "CopyPURTC",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"additionalColumns": [
							{
								"name": "ETL_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							}
						],
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": {
							"value": "@{concat('delete from erp.PURTC ')}",
							"type": "Expression"
						},
						"writeBehavior": "upsert",
						"upsertSettings": {
							"useTempDB": true,
							"keys": [
								"COMPANY",
								"TC001",
								"TC002"
							]
						},
						"sqlWriterUseTableLock": true,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "PURTC",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ERP_PURTC",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "CopyPURTD",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "CopyPURTC",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"additionalColumns": [
							{
								"name": "ETL_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							}
						],
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": {
							"value": "@{concat('delete from erp.PURTD ')}",
							"type": "Expression"
						},
						"writeBehavior": "upsert",
						"upsertSettings": {
							"useTempDB": true,
							"keys": [
								"COMPANY",
								"TD001",
								"TD002",
								"TD003",
								"TD004",
								"TD005"
							]
						},
						"sqlWriterUseTableLock": true,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "PURTD",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ERP_PURTD",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Trim",
				"type": "Script",
				"dependsOn": [
					{
						"activity": "CopyPURTC",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "CloudDW",
					"type": "LinkedServiceReference"
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": {
								"value": "@concat('update erp.PURTC set TC001 = trim(TC001), TC002 = trim(TC002) ',' where convert(varchar, ETL_DATE, 112) >= convert(varchar, getdate()-1, 112)')",
								"type": "Expression"
							}
						}
					]
				}
			},
			{
				"name": "Trim2",
				"type": "Script",
				"dependsOn": [
					{
						"activity": "CopyPURTD",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "CloudDW",
					"type": "LinkedServiceReference"
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": {
								"value": "@concat('update erp.PURTD set TD001 = trim(TD001), TD002 = trim(TD002), TD003 = trim(TD003), TD004 = trim(TD004), TD005 = trim(TD005) ',' where convert(varchar, ETL_DATE, 112) >= convert(varchar, getdate()-1, 112)')",
								"type": "Expression"
							}
						}
					]
				}
			}
		],
		"folder": {
			"name": "PIP_ODS/ERP/HISTORY"
		},
		"annotations": []
	}
}