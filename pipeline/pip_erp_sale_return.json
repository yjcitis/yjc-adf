				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": {
								"value": "@concat('update erp.COPTJ set TJ001 = trim(TJ001), TJ002 = trim(TJ002), TJ003 = trim(TJ003) ',' where convert(varchar, ETL_DATE, 112) >= convert(varchar, getdate()-1, 112)')",
								"type": "Expression"
							}
