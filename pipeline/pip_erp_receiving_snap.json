{
	"name": "pip_erp_receiving_snap",
	"properties": {
		"description": "ERP 收款單每月快照",
		"activities": [
			{
				"name": "CopyACRTC",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"additionalColumns": [
							{
								"name": "ETL_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							},
							{
								"name": "DATA_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							}
						],
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": {
							"value": "@{concat('delete erp.acrtc_snap_m where year(data_date) = year(getdate()) and month(data_date) = month(getdate())')}\n",
							"type": "Expression"
						},
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": true,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ACRTC",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ERP_ACRTC_SNAP_M",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "CopyACRTD",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "CopyACRTC",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"additionalColumns": [
							{
								"name": "ETL_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							},
							{
								"name": "DATA_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							}
						],
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": {
							"value": "@{concat('delete erp.acrtd_snap_m where year(data_date) = year(getdate()) and month(data_date) = month(getdate())')}",
							"type": "Expression"
						},
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": true,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ACRTD",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ERP_ACRTD_SNAP_M",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Trim",
				"type": "Script",
				"dependsOn": [
					{
						"activity": "CopyACRTC",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "CloudDW",
					"type": "LinkedServiceReference"
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": {
								"value": "@concat('update erp.ACRTC set TC001 = trim(TC001), TC002 = trim(TC002)','where convert(varchar, ETL_DATE, 112) >= convert(varchar, getdate()-6, 112)')",
								"type": "Expression"
							}
						}
					]
				}
			},
			{
				"name": "Trim2",
				"type": "Script",
				"dependsOn": [
					{
						"activity": "CopyACRTD",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "CloudDW",
					"type": "LinkedServiceReference"
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": {
								"value": "@concat('update erp.ACRTD set TD001 = trim(TD001), TD002 = trim(TD002), TD003 = trim(TD003) ','where convert(varchar, ETL_DATE, 112) >= convert(varchar, getdate()-6, 112)')",
								"type": "Expression"
							}
						}
					]
				}
			}
		],
		"folder": {
			"name": "PIP_ODS/ERP/SNAPSHOT"
		},
		"annotations": []
	}
}