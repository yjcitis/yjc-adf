{
	"name": "pip_erp_payment",
	"properties": {
		"description": "ERP 付款條件",
		"activities": [
			{
				"name": "CopyCMSNA",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"additionalColumns": [
							{
								"name": "ETL_DATE",
								"value": {
									"value": "@addhours(utcnow(),8)",
									"type": "Expression"
								}
							}
						],
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": {
							"value": "@{concat('delete from erp.CMSNA where year(CREATE_DATE) >= ''' , formatDateTime(addDays(addhours(utcnow(),8),-1),'yyyy'),'''', ' or year(MODI_DATE) >= ''', formatDateTime(addDays(addhours(utcnow(),8),-1),'yyyy'),'''')}",
							"type": "Expression"
						},
						"writeBehavior": "upsert",
						"upsertSettings": {
							"useTempDB": true,
							"keys": [
								"COMPANY",
								"NA001",
								"NA002"
							]
						},
						"sqlWriterUseTableLock": true,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "CMSNA",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ERP_CMSNA",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Trim",
				"type": "Script",
				"dependsOn": [
					{
						"activity": "CopyCMSNA",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "CloudDW",
					"type": "LinkedServiceReference"
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": {
								"value": "@concat('update erp.CMSNA set NA001 = trim(NA001), NA002 = trim(NA002) ',' where convert(varchar, ETL_DATE, 112) >= convert(varchar, getdate()-6, 112)')",
								"type": "Expression"
							}
						}
					]
				}
			}
		],
		"folder": {
			"name": "PIP_ODS/ERP/HISTORY"
		},
		"annotations": []
	}
}